{% extends 'base.html.twig' %}

{% block title %}Détails de l'Équipe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h1 class="text-center text-primary mb-4">{{ equipe.nomEquipe }}</h1>

            <div class="row">
                <!-- Détails de l'équipe -->
                <div class="col-md-6">
                    <h4 class="text-secondary">Informations générales</h4>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>ID:</strong> {{ equipe.id }}</li>
                        <li class="list-group-item"><strong>Nom de l'équipe:</strong> {{ equipe.nomEquipe }}</li>
                        <li class="list-group-item"><strong>Chef d'équipe:</strong> 
                            {% if equipe.chefEquipe %}
                                {{ equipe.chefEquipe.nom }} {{ equipe.chefEquipe.prenom }}
                            {% else %}
                                <span class="text-muted">Aucun chef d'équipe</span>
                            {% endif %}
                        </li>
                        <li class="list-group-item"><strong>Date de début:</strong> {{ equipe.dateDebut|date('d/m/Y') }}</li>
                        <li class="list-group-item"><strong>Date de fin:</strong> {{ equipe.dateFin|date('d/m/Y') }}</li>
                    </ul>
                </div>

                <!-- Liste des membres -->
                <div class="col-md-6">
                    <h4 class="text-secondary">Membres affectés</h4>
                    {% if equipe.equipeUsers|length > 0 %}
                        <ul class="list-group">
                            {% for equipeUser in equipe.equipeUsers %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ equipeUser.utilisateur.nom }} {{ equipeUser.utilisateur.prenom }}
                                    <span class="badge bg-info">Affecté</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted">Aucun membre affecté à cette équipe.</p>
                    {% endif %}
                </div>
            </div>

            <!-- Boutons d'actions -->
            <div class="text-center mt-4">
                <a href="{{ path('app_equipe_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
                <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                {{ include('equipe/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
