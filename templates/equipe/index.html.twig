            <!-- ðŸ† Tableau des Ã‰quipes -->
            <div class="table-responsive">
                <table class="table custom-table" id="teamTable">
                    <thead>
                        <tr>
                            <th>Nom de l'Ã‰quipe</th>
                            <th>Membres</th>
                            <th>Date DÃ©but</th>
                            <th>Date Fin</th>
