{% extends 'base.html.twig' %}

{% block title %}Dashboard Utilisateur{% endblock %}

{% block body %}
<h1>Bienvenue sur votre espace</h1>

<p>Voici vos informations :</p>

<ul>
    <li>Nom : {{ app.user.nom }}</li>
    <li>Prénom : {{ app.user.prenom }}</li>
    <li>Compétences :
        {% if app.user.competenceUsers() is not empty %}
            {% for competence in app.user.competenceUsers() %}
                <ul>
                    {{ competence.getCompetence().nomCompetence }}
                </ul>
            {% endfor %}
        {% else %}
        <em>Aucune compétence</em>
    {% endif %}


    </li>
</ul>

<a href="{{ path('app_logout') }}">Déconnexion</a>
{% endblock %}
