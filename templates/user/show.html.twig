    <style>
        .glassmorphism-card {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 50px;
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.15);
            max-width: 700px;
            width: 100%;
        }

        .glassmorphism-header {
            font-size: 28px;
            font-weight: bold;
            background: rgba(0, 123, 255, 0.2);
            padding: 15px;
            border-radius: 20px;
            margin-bottom: 25px;
        }

        .user-info-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .user-info-table th {
            background: rgba(0, 123, 255, 0.2);
            color: black;
            text-align: left;
            padding: 12px;
            border-radius: 10px;
            font-weight: bold;
        }

        .user-info-table td {
            background: rgba(255, 255, 255, 0.5);
            padding: 12px;
            border-radius: 10px;
        }

        .role-badge {
