<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Application{% endblock %}</title>

    <!-- Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f4f6f9;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            height: 100vh;
            background: #1e3c72;
            color: white;
            padding: 15px;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar .nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar .nav li {
            padding: 10px;
        }

        .sidebar .nav a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            display: block;
            padding: 8px;
            border-radius: 5px;
        }

        .sidebar .nav a:hover,
        .sidebar .nav a.active {
            background: rgba(255, 255, 255, 0.2);
        }

        .sidebar .user-section {
            text-align: center;
            padding-top: 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

        .sidebar .user-section p {
            margin-bottom: 10px;
        }

        /* Contenu principal */
        .content {
            margin-left: 220px;
            width: calc(100% - 220px);
            padding: 20px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                width: 60px;
                padding: 10px;
                align-items: center;
            }

            .sidebar .nav a {
                font-size: 14px;
                text-align: center;
                padding: 5px;
            }

            .sidebar .nav a span {
                display: none;
            }

            .sidebar .user-section {
                display: none;
            }

            .content {
                margin-left: 60px;
                width: calc(100% - 60px);
            }
        }
    </style>
</head>
<body>

{% if app.user %}
    <!-- Sidebar -->
    <div class="sidebar">
        <ul class="nav">
            <li><a href="{{ path('app_dashboard') }}" class="{% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}">Dashboard</a></li>

            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('app_equipe_index') }}" class="{% if app.request.attributes.get('_route') == 'app_equipe_index' %}active{% endif %}">Gestion équipes</a></li>
                <li><a href="{{ path('app_chantier_index') }}" class="{% if app.request.attributes.get('_route') == 'app_chantier_index' %}active{% endif %}">Gestion chantiers</a></li>
                <li><a href="{{ path('app_competence_index') }}" class="{% if app.request.attributes.get('_route') == 'app_competence_index' %}active{% endif %}">Gestion compétences</a></li>
                <li><a href="{{ path('app_user_list') }}" class="{% if app.request.attributes.get('_route') == 'app_user_list' %}active{% endif %}">Gestion utilisateurs</a></li>
            {% endif %}
        </ul>

        <!-- Profil utilisateur -->
        <div class="user-section">
            <p>{{ app.user.username }}</p>
            <!-- Bouton Modifier mon profil -->
            <button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#editProfileModal">Modifier mon profil</button>
            <br>
            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm mt-2">Déconnexion</a>
        </div>
    </div>
{% endif %}

<!-- Contenu principal -->
<div class="content">
    {% block body %}{% endblock %}
</div>

<!-- Modal Modifier mon profil -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <div class="text-center">
                    <i class="fas fa-spinner fa-spin"></i> Chargement...
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Script AJAX pour charger le contenu du profil -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const modal = document.getElementById("editProfileModal");

        modal.addEventListener("show.bs.modal", function() {
            fetch("{{ path('user_edit_modal') }}")
                .then(response => response.text())
                .then(html => {
                    document.getElementById("modalContent").innerHTML = html;
                })
                .catch(error => {
                    document.getElementById("modalContent").innerHTML = "<div class='alert alert-danger'>Erreur de chargement.</div>";
                    console.error("Erreur de chargement :", error);
                });
        });
    });
</script>

</body>
</html>
