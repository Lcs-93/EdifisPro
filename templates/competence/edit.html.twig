{% extends 'base.html.twig' %}

{% block title %}Modifier une comp√©tence{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center">
        <div class="glassmorphism-card shadow-lg p-5">
            <div class="glassmorphism-header text-center">
                <h2>üõ† Modifier une Comp√©tence</h2>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger text-center">
                    <i class="fas fa-exclamation-circle"></i> {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center">
                    <i class="fas fa-check-circle"></i> {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.nomCompetence, 'üèÜ Nom de la Comp√©tence', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.nomCompetence, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Entrez le nom de la comp√©tence'}}) }}
                    {{ form_errors(form.nomCompetence) }}
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-glass btn-lg">
                        <i class="fas fa-sync-alt"></i> Mettre √† Jour
                    </button>
                    <a href="{{ path('app_competence_index') }}" class="btn btn-outline-secondary ms-3">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .glassmorphism-card {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(12px);
            border-radius: 25px;
            padding: 40px;
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.15);
            max-width: 600px;
            width: 100%;
        }

        .glassmorphism-header {
            font-size: 26px;
            font-weight: bold;
            background: rgba(0, 123, 255, 0.2);
            padding: 15px;
            border-radius: 20px;
            margin-bottom: 20px;
        }

        .custom-input {
            border-radius: 12px;
            padding: 14px;
            font-size: 16px;
            background: rgba(255, 255, 255, 0.5);
            transition: all 0.3s ease-in-out;
            width: 100%;
        }

        .custom-input:focus {
            background: rgba(255, 255, 255, 0.8);
            border: 2px solid #007bff;
            box-shadow: 0px 0px 12px rgba(0, 123, 255, 0.3);
        }

        .btn-glass {
            background: linear-gradient(45deg, #007bff, #00d4ff);
            border: none;
            color: white;
            padding: 14px 24px;
            border-radius: 30px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
            box-shadow: 0px 4px 15px rgba(0, 123, 255, 0.4);
        }

        .btn-glass:hover {
            background: linear-gradient(45deg, #0056b3, #0096c7);
            box-shadow: 0px 6px 20px rgba(0, 123, 255, 0.6);
        }

        .btn-outline-secondary {
            border-radius: 30px;
            padding: 12px 20px;
            transition: all 0.3s ease-in-out;
        }

        .btn-outline-secondary:hover {
            background: #6c757d;
            color: white;
        }

        /* ‚úÖ Animation */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .glassmorphism-card {
            animation: fadeIn 0.8s ease-in-out;
        }
    </style>
{% endblock %}
